<section id="sidebar">
  <section id="search_post">
    <%= render 'search' %>
  </section>
  <hr class="block"/>
  
  <section id="links">
    <%= render 'links' %>
  </section>
  
  <section id="joined_groups">
    <%= render 'joined_groups' %>
  </section><br />

</section>


<section id="posts">
  <section id="new_post_section">
  	<% @post = Post.new %>
    <%= render 'form' %>
  </section>
  <%= render 'list_posts' %>
  <% if GroupUser.groups(current_user.id).count == 1 %>
     <%= render 'explain'%>
  <% end %>
</section>


<% if @posts.count == Post.per_page %>
  <%= form_tag posts_path, id:'infloader', method:'get', remote: true do |f|%>
    <%= hidden_field_tag :page, "2",id:"page" %>
    <%= submit_tag "Load Next Posts", :name => nil %>
  <% end %>
<% end %>
