<section id="sidebar">

  <section id="joined_groups">
    <%= render 'joined_groups' %>
  </section>
  
  <section id="links">
    <%= render 'links' %>
  </section>

</section>

<section id="posts">
  <% @post = Post.new %>
  <%= render 'form' %>
  <%= render 'list_posts' %>
  <%= will_paginate @posts %>
  
  <%= form_tag posts_path, id:'infloader', method:'get', remote: true do %>
    <%= submit_tag "Load Next Posts", :name => nil %>
  <% end %>
</section>
