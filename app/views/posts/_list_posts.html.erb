<% @posts.each do |post| %>
<% if post.group.id != 1 or post.user_id == current_user.id %>
<article class="post_article tlelm">
	<header>
		<h3><%= link_to post.topic.subject, post.topic %> - <%= link_to post.group.name, post.group %></h3>
	</header>
	<div class="user_data">
		<span class="userimg"><%= s3 image_tag(post.user.photo.url(:small)) %></span>
		<span class="user"><b><%= post.user.username %></b></span>
		<span class="date"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></span></br>
	    <span class="no"  >No:<%= post.topic_post_id %></span>
	</div>
	<div class="body">
		<% if post.photo? %>
		<div class="image">
			<a class="fancybox" href="<%= s3 post.photo.url(:original) %>"><%= s3(image_tag post.photo.url(:medium)) %></a>
		</div>
		<% end %>
		<%= auto_res post.body_html %>
	</div>
	<div class="comments">
		<a href="/posts?search=%3E%3E<%= post.topic_post_id %>&tid=<%= post.topic_id %>">Comment(<%= Comment.countRes(post.id) %>)</a>
	</div>
</article>
<% end %>
<% end %>