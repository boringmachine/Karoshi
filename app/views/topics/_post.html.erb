<%= form_for(Post.new) do |f| %>
<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

<div class="field">
	<%= f.label :body %>
	<br />
	<%= f.text_area :body, maxlength: "500" %>
</div>

<div class="field">
	<%= f.label :photo %>
	<%= f.file_field :photo %>
</div>

<div class="field">
	<%= f.hidden_field :topic_id, :value => @topic.id  %>
</div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>
