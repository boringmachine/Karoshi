<p id="notice"><%= notice %></p>

<section id="topic_new_post" class="post_article">
  <% community = @topic.community %>
  <h1><%=@topic.subject%>@<%= link_to community.name, community %> </h1>

  <% if !community.users.where(id:current_user.id).blank? and !@topic.deleteflag%>
    <% @post = Post.new %>
    <%= render 'post' %>
    <div class="count_char">500</div>
  <% end %>
</section>

<section id="post_list">
  <%= render 'topic_posts' %>
</section>