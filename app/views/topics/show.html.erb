<p id="notice"><%= notice %></p>

<section id="topic_new_post" class="post_article">
  <h1><%=@topic.subject%>@<%= @topic.community.name %> </h1>

  <% unless @topic.community.blank? %>
    <% @post = Post.new %>
    <%= render 'post' %>
    <div class="count_char">500</div>
  <% end %>
</section>

<section id="post_list">
  <%= render 'topic_posts' %>
</section>