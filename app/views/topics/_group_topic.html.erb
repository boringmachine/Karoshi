<%= form_for(GroupTopic.new, :remote => true) do |f| %>
  <div class="field">
	<%= collection_select(:group_topic, :group_id, Group.owngroups(current_user.id) , :id, :name) %>
  </div>
  <div class="field">
    <%= f.hidden_field :topic_id, :value => @topic.id %>
  </div>
  <div class="actions">
	<%= submit_tag("Join this topic") %>
  </div>
<% end %>
