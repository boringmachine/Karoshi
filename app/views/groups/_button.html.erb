<% group_user = GroupUser.where(:group_id => @group.id,:user_id => current_user.id) %>
<% if group_user.empty? %>
	<%= form_for(GroupUser.new,remote: true) do |f| %>
		<%= hidden_field_tag 'group_user[group_id]', @group.id %>
		<%= submit_tag("Join this group") %>
	<% end %>
<% elsif @group.id != 1 %>
	<% tmp = group_user.pop %>
	<%= button_to "Leave this group", {:controller => :group_users,
      :action => 'destroy', :id => tmp.id }, :method => :delete, :remote => true %>
<% end %>
